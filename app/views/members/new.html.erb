<h1>Sign up as a new member</h1>
<% @member.password = @member.password_confirmation = nil %>

<%= error_messages_for :member %>
<% form_for :member, :url => members_path do |f| -%>
<fieldset class="form">
  <legend>Account details</legend>
  <div class="row">
    <%= f.label 'name' %>
    <%= f.text_field 'name' %>
  </div>
  <div class="row">
    <%= f.label 'trading_capital' %>
    <%= f.text_field 'trading_capital', :size => 10 %>
  </div>
  <div class="row">
    <%= f.label 'risk_percentage' %>
    <%= f.text_field 'risk_percentage', :size => 3 %>
  </div>
  <div class="row">
    <%= f.label :login %>
    <%= f.text_field :login %>
  </div>
  <div class="row">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="row">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="row">
    <%= f.label :password_confirmation, 'Confirm Password' %>
    <%= f.password_field :password_confirmation %>
  </div>
</fieldset>
<p><%= submit_tag 'Sign up' %> or <%= link_to "don't", '/' %></p>
<% end -%>
